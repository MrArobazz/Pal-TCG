<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_arene1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Arena_1_Activity"
    android:background="@drawable/gradient_list">

    <LinearLayout
        android:id="@+id/Linearlayout_plateau"
        android:layout_width="358dp"
        android:layout_height="638dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_arena"
            android:layout_width="match_parent"
            android:layout_height="439dp">

            <EditText
                android:id="@+id/editTextText_pv_player"
                android:layout_width="48dp"
                android:layout_height="26dp"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="text"
                android:text="Name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_carte_active_player"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_pv_player_arene1"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView_carte_active_player"
                android:layout_width="78dp"
                android:layout_height="111dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space2"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/alakazambaseset1" />

            <Space
                android:id="@+id/space2"
                android:layout_width="360dp"
                android:layout_height="214dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_carte_active_bot" />

            <ImageView
                android:id="@+id/imageView_carte_active_bot"
                android:layout_width="104dp"
                android:layout_height="112dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/abrabaseset43" />

            <ProgressBar
                android:id="@+id/progressBar_pv_bot_arene1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="134dp"
                android:layout_height="72dp"
                android:foregroundTint="#08830D"
                app:layout_constraintBottom_toTopOf="@+id/space2"
                app:layout_constraintEnd_toStartOf="@+id/imageView_carte_active_bot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar_pv_player_arene1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="141dp"
                android:layout_height="72dp"
                android:foregroundTint="#08830D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_carte_active_player"
                app:layout_constraintTop_toTopOf="@+id/imageView_carte_active_player" />

            <EditText
                android:id="@+id/editTextText_pv_bot"
                android:layout_width="48dp"
                android:layout_height="26dp"
                android:ems="10"
                android:inputType="text"
                android:text="Name"
                app:layout_constraintBottom_toTopOf="@+id/progressBar_pv_bot_arene1"
                app:layout_constraintEnd_toStartOf="@+id/imageView_carte_active_bot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView_sprite_player"
                android:layout_width="56dp"
                android:layout_height="41dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/space2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/brice" />

            <ImageView
                android:id="@+id/imageView_sprite_bot"
                android:layout_width="56dp"
                android:layout_height="41dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/space2"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Spinner
            android:id="@+id/spinner_poke_choice"
            android:layout_width="match_parent"
            android:layout_height="47dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_attack_choice"
            android:layout_width="match_parent"
            android:layout_height="66dp" />

        <LinearLayout
            android:id="@+id/linearLayout_att_def"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton_run"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="change_card"
                app:srcCompat="@drawable/brice" />

            <ImageButton
                android:id="@+id/imageButton_fight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="attack"
                app:srcCompat="@drawable/battle" />

            <ImageButton
                android:id="@+id/imageButton_change"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="change_card"
                app:srcCompat="@drawable/brice" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>