<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Arena_3_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_arena3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/battle"/>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout_arena3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/battlefiled_1"
        android:orientation="vertical"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_arena3">

        <LinearLayout
            android:id="@+id/linearLayout_arena3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_areana3_bot"
                android:layout_width="match_parent"
                android:layout_height="294dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="120dp"
                    android:layout_height="59dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:progressTint="@color/black"/>

                <ImageView
                    android:id="@+id/imageView_bot_arene3"
                    android:layout_width="134dp"
                    android:layout_height="177dp"
                    android:src="@drawable/abrabaseset43"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar" />

                <ImageView
                    android:id="@+id/imageView_player_arena3"
                    android:layout_width="66dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="56dp"
                    android:src="@drawable/charmander"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_areana3_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="120dp"
                    android:layout_height="59dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="134dp"
                    android:layout_height="177dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/alakazambaseset1"
                    app:layout_constraintBottom_toTopOf="@+id/progressBar2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="66dp"
                    android:layout_height="96dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/charmander_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView_arena3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            app:headerLayout="@layout/header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_arena3"
            app:menu="@menu/navigation_view_menu" />


    </androidx.drawerlayout.widget.DrawerLayout>




</androidx.constraintlayout.widget.ConstraintLayout>