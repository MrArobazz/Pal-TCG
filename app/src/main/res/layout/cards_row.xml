<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_theLeftCard"
                android:layout_width="160dp"
                android:layout_height="224dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/abrabaseset43"
                android:importantForAccessibility="no" />

            <CheckBox
                android:id="@+id/checkBox_isLeftEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView_theLeftCard"
                app:layout_constraintStart_toStartOf="@+id/imageView_theLeftCard"
                app:layout_constraintTop_toBottomOf="@+id/imageView_theLeftCard" />

            <ImageView
                android:id="@+id/imageView_theRightCard"
                android:layout_width="160dp"
                android:layout_height="224dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/alakazambaseset1" />

            <CheckBox
                android:id="@+id/checkBox_isRightEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView_theRightCard"
                app:layout_constraintStart_toStartOf="@+id/imageView_theRightCard"
                app:layout_constraintTop_toBottomOf="@+id/imageView_theRightCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>