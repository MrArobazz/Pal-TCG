<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list">

    <ImageView
        android:id="@+id/imageView_entete"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pok_mon_trading_card_game_logo_svg" />

    <ImageButton
        android:id="@+id/imageButton_cards"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="?android:selectableItemBackground"
        android:importantForAccessibility="no"
        android:onClick="seeDeck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_entete"
        app:srcCompat="@drawable/deck" />

    <ImageButton
        android:id="@+id/imageButton_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="?android:selectableItemBackground"
        android:importantForAccessibility="no"
        android:src="@drawable/big_brice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_entete" />

    <ImageButton
        android:id="@+id/imageButton_battle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:onClick="goArene"
        app:layout_constraintBottom_toTopOf="@+id/imageButton_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_profile"
        app:srcCompat="@drawable/battle"
        android:importantForAccessibility="no" />

    <ImageButton
        android:id="@+id/imageButton_home"
        android:layout_width="132dp"
        android:layout_height="116dp"
        android:layout_marginBottom="16dp"
        android:background="?android:selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_button_for_interface_svgrepo_com"
        android:importantForAccessibility="no" />


</androidx.constraintlayout.widget.ConstraintLayout>